{
  "name": "secret-keeper",
  "version": "1.0.0",
  "description": "Secure secret management for Claude Code and AI assistants. One command setup: sk auto",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "secret-keeper": "dist/index.js",
    "sk": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch src/index.ts",
    "build": "bun build src/index.ts src/mcp.ts --outdir dist --target bun --packages external",
    "prepare": "bun build src/index.ts src/mcp.ts --outdir dist --target bun --packages external",
    "prepublishOnly": "npm run build",
    "test": "bun test"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ink": "^4.4.1",
    "ink-select-input": "^5.0.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^5.0.1",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^18.2.0"
  },
  "keywords": [
    "secrets",
    "security",
    "claude",
    "claude-code",
    "mcp",
    "ai",
    "encryption",
    "env",
    "dotenv",
    "vault"
  ],
  "author": "CourageToGroww",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CourageToGroww/secret-keeper.git"
  },
  "homepage": "https://github.com/CourageToGroww/secret-keeper#readme"
}
